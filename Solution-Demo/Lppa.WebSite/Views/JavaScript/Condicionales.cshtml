<span id="spDatos">
</span>

@section scripts
{
    <script src="~/Scripts/jquery-2.2.4.min.js"></script>

    <script>

        $("#btnListaSwitchJS").click(function () {
            var strDatos = '';
            var x = 0;
            x = parseInt(window.prompt("ingrese un valor para x:", 0));
            switch (x) {
                case 0:
                    strDatos += "Case jquery " + x + "<br />";
                    break;
                case 1:
                    strDatos += "Case jquery " + x + "<br />";
                    break;                
                default:
                    strDatos += "Nada jquery " + x + "<br />";
                    break;
            }
            var ctlspan = document.getElementById("spDatos");
            ctlspan.innerHTML = strDatos;
        });


    </script>


    <script>

        var num = 5;
        var vector = [2, 5, 8, 9, 10];
        var strDatos = '';

        function listarValores() {

            strDatos = '';
            for (var i = 0; i < vector.length; i++) {

                strDatos += vector[i] + "<br />";
                //if (vector[i] > 5)
                //    strDatos += vector[i] + "<br />";
            }
            var ctlspan = document.getElementById("spDatos");
            ctlspan.innerHTML = strDatos;
        }


        function fnWhile() {
            var finish = 10;
            var x = 0;
            x = parseInt(window.prompt("ingrese un valor para x:", 0));
            strDatos = '';
            while (x < finish) {
                strDatos += x + "<br />";
                x++;
            }
            var ctlspan = document.getElementById("spDatos");
            ctlspan.innerHTML = strDatos;
        }

        function fnDoWhile() {
            var finish = 10;
            var x = 0;
            x = parseInt(window.prompt("ingrese un valor para x:", 0));
            strDatos = '';
