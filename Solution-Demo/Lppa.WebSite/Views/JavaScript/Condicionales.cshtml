                x++;
                strDatos += x + "<br />";
            }
            while (x < finish)

            var ctlspan = document.getElementById("spDatos");
            ctlspan.innerHTML = strDatos;
        }

        function fnForeach() {

            strDatos = '';
            for (var i in vector) {
                strDatos += vector[i] + "<br />";
            }

            var ctlspan = document.getElementById("spDatos");
            ctlspan.innerHTML = strDatos;
        }

        function fnSwitch() {
            var x = 0;
            x = parseInt(window.prompt("ingrese un valor para x:", 0));
            switch (x) {
                case 0:
                    strDatos += "Case" + x + "<br />";
                    break;
                case 1:
                    strDatos += "Case" + x + "<br />";
                    break;
                case 2:
                    strDatos += "Case" + x + "<br />";
                    break;
                default:
                    strDatos += "Nada" + x + "<br />";
                    break;
            }
            var ctlspan = document.getElementById("spDatos");
            ctlspan.innerHTML = strDatos;
        }


    </script>
}
